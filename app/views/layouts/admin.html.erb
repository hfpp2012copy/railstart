<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "admin", "data-turbo-track": "reload", defer: true %>
    <%= javascript_importmap_tags %>
    <%- javascript_include_tag "index", "data-turbo-track": "reload", defer: true %>
    <%= display_meta_tags site: ENV["website_title"] %>
    <style><%= yield :stylesheets %></style>
    <%= yield :head %>
  </head>

  <body>
    <%= render "layouts/admin/header" %>
    <%= render "layouts/admin/sidebar" %>
    <%= render "layouts/admin/breadcrumb" %>
    <main id="main" class="main">
      <%= render "layouts/admin/breadcrumb" %>
      <%= yield %>
    </main>
    <%= render "layouts/admin/footer" %>
  </body>
</html>
